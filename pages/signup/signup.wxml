<!--pages/signup/signup.wxml-->
<view class='container' style="background-image: url('../../images/background2.jpg')">
  <form>
    <view class='space'></view>
    <view class='row'>
      <text>昵称：</text>
      <input type='text' name="nickName" placeholder='nickName'/>
    </view>
    <view class='row'>
      <text>账号：</text>
      <input type='text' name="name" placeholder='email'/>
    </view>
    <view class='row'>
      <text>密码：</text>
      <input type='password' name="password" placeholder='password'/>
    </view>
    <view class='space1'></view>
    <navigator class='link' url='../login/login'>返回登录界面</navigator>
    <view class='row'>
      <button class='btn' hover-class='btn_hover' bindtap='mainPage'>注册</button>
    </view>
    <view class='space2'></view>
  </form>
</view>
